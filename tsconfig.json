{
	"extends": "@tsconfig/node20/tsconfig.json",
	"compilerOptions": {
		"target": "esnext", // Vite handles final target based on build config
		"module": "esnext", // ES Module format
		"lib": ["ES2023"],
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"moduleResolution": "bundler", // Recommended for modern Node/Vite
		"resolveJsonModule": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		// --- Vite handles these, less critical now ---
		// "outDir": "dist", // Vite config takes precedence
		// "rootDir": "src",
		// "removeComments": true, // Vite handles minification
		// --- Keep path aliases ---
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": ["src/**/*.ts", "vite.config.ts"], // Include vite config
	"exclude": ["node_modules", "dist", "src/**/*.test.ts"] // Exclude output dir
}
